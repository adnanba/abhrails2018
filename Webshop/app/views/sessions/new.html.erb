Login to your account
<%= link_to 'Create account', '/signup' %>

<%= form_tag '/login' do %>

  EMAIL <br>
  <%= text_field_tag :email %>
  <br>
  PASSWORD <br>
  <%= password_field_tag :password %>
  <br>
  <%= check_box_tag :remember_me, 1, params[:remember_me] %>
  REMEMBER ME
  <%= submit_tag "LOGIN" %>
  

<% end %>