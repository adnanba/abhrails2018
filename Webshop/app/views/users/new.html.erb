Create your account!
<%= link_to 'Login to your account', '/login' %>

<%= form_with scope: :user, url: '/users' do |f| %>

  EMAIL <br> 
  <%= f.text_field :email %>
  <br>
  PASSWORD <br> 
  <%= f.password_field :password %>
  <br>
  PASSWORD CONFIRMATION <br> 
  <%= f.password_field :password_confirmation %>
  <br>
  <%= f.submit "CREATE ACCOUNT" %>

<% end %>

